<h1><%= t(:"catalog.email_title") %></h1>

<% form_tag url_for(:action => 'send_email_record', :style => 'email'), :id => 'email_form', :method => :post do %>
  <%= label_tag(:to, t(:"catalog.email.to")) %><br/>
  <%= text_field_tag :to %><br/>
  <%= label_tag(:message, t(:"catalog.email.message")) %><br/>
  <%= text_area_tag :message %><br/>
  <%= submit_tag t(:"catalog.email.submit") %>
<% end %>
