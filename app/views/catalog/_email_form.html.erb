<div class="lightboxTitle">
  <div class="lightboxBack">
    <%= link_to t(:close), catalog_path(@document[:id]), {:class => "lightboxLink", :name => 'email'} %>
  </div>
  <%= t(:email_this) %>
</div>

<% form_tag url_for(:action => 'send_email_record', :style => 'email'), :id => 'email_form', :method => :post do %>
  <%= label_tag(:to, t(:email_address)) %><br/>
  <%= text_field_tag :to %><br/>
  <%= label_tag(:message, t(:email_message)) %><br/>
  <%= text_area_tag :message %><br/>
  <%= submit_tag t(:email_send) %>
<% end %>
