<% carriers = 
{
t(:sms_select_carrier) => '',
'AT&T' => 'att',
'Verizon' => 'verizon',
'T Mobile' => 'tmobile',
'Sprint' => 'sprint',
'Nextel' => 'nextel',
'Virgin Mobile' => 'vmobile',
'Alltel' => 'alltel',
'Cricket' => 'cricket'
}
%>
<div class="lightboxTitle">
  <div class="lightboxBack">
    <%= link_to t(:close), catalog_path(@document[:id]), {:class => "lightboxLink", :name => 'sms'} %>
  </div>
  <%= t(:sms_this) %>
</div>
<% form_tag url_for(:action => 'send_email_record', :style => 'sms'), :id => 'sms_form', :method => :post do %>
  <%= label_tag(:to, t(:sms_to)) %><br/>
  <%= text_field_tag :to %><br/>
  <%= label_tag(:carrier, t(:sms_carrier)) %><br/>
  <%= select_tag(:carrier, options_for_select(carriers, '')) %><br/>
  <%= submit_tag t(:sms_send) %>
<% end %>
